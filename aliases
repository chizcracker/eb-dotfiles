# Unix
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias ll='ls -al'
alias lh='ls -Alh'
alias vi='vim'
alias vim='mvim -v'
alias tar='gtar'

# noglob!
alias be="bundle exec"

# set warning before jumping machines
#
# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local

