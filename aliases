# Unix
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias ll='ls -al'
alias lh='ls -Alh'
alias vi='vim'
alias vim='mvim -v'

# noglob!
alias rake="noglob rake"
alias curl="noglob curl"

# set warning before jumping machines
alias ssh="warning & ssh"
alias psql="warning & psql"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local

