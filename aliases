# Unix
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias ll='ls -al'
alias lh='ls -Alh'
alias vi='vim'
alias vim='mvim -v'
alias tar='gtar'


# ruby
alias be="bundle exec"

git-files() {
  git ls-tree --full-tree -r --name-only HEAD
}

re-ctags() {
  ctags -f .tags -L $(git-files)
}

# set warning before jumping machines
#
# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
